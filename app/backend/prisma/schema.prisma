generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- SESSIONS --- //

model session {
  sid    String   @id
  sess   Json
  expire DateTime

  userId Int?
  user User? @relation(fields: [userId], references: [id])

  @@index([expire], name: "IDX_session_expire")
}

// --- USERS --- //

model User {
  id Int @id @unique @default(autoincrement())
  authId String?

  created_at DateTime @default(now()) @db.Timestamptz(6)

  firstName String?
  lastName String?
  email String?

  userFlashcards UserFlashcard[]

  sessions session[]

  @@index([id])
}

// --- FLASHCARDS --- //

model Flashcard {
  id         Int   @id @unique @default(autoincrement())

  created_at DateTime @default(now()) @db.Timestamptz(6)

  question   String
  answer     String

  userFlashcards UserFlashcard[]
}

model UserFlashcard {
  id      Int    @id @unique @default(autoincrement())

  due            DateTime  @default(now())
  stability      Float
  difficulty      Float
  elapsed_days   Int
  scheduled_days Int
  reps           Int
  lapses         Int
  state          State     @default(New)
  last_review    DateTime?

  userId   Int
  user User @relation(fields: [userId], references: [id])

  flashcardId Int
  flashcard Flashcard @relation(fields: [flashcardId], references: [id])

  @@index([id])
  @@index([userId])
}

enum State {
  New        @map("0")
  Learning   @map("1")
  Review     @map("2")
  Relearning @map("3")
}

enum Rating {
  Manual @map("0")
  Again  @map("1")
  Hard   @map("2")
  Good   @map("3")
  Easy   @map("4")
}

// --- SCENARIOS --- //

model Scenario {
  id      Int    @id @unique @default(autoincrement())

  title String
  openingPrompt String
  initialState Json

  ScenarioSession ScenarioSession[]
}

model ScenarioSession {
  id      Int    @id @unique @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)

  userId Int
  sessionId String
  scenarioId Int
  scenario Scenario @relation(fields: [scenarioId], references: [id])

  scenarioState Json

  @@index([sessionId])
}