{
  "name": "hitting-the-fan",
  "version": "0.0.0",
  "author": "Bo Tembunkiart <botbunk@gmail.com>",
  "license": "MIT",
  "private": true,
  "description": "What do you do when shit hits the fan?",
  "scripts": {
    "---------------------------------------------------------------------------- Clean": "",
    "clean": "pnpm clean:backend && pnpm clean:frontend",
    "clean:backend": "cd app/backend && pnpm clean",
    "clean:frontend": "cd app/frontend && pnpm clean",
    "---------------------------------------------------------------------------- Build": "",
    "build": "pnpm clean && pnpm build:backend && pnpm build:frontend",
    "build:backend": "cd app/backend && pnpm build",
    "build:frontend": "cd app/frontend && pnpm build",
    "---------------------------------------------------------------------------- Setup": "",
    "postinstall": "pnpm install:backend && pnpm install:frontend",
    "install:backend": "cd app/backend && pnpm install",
    "install:frontend": "cd app/frontend && pnpm install",
    "---------------------------------------------------------------------------- Local Dev": "",
    "dev": "./bin/dev-watch.sh",
    "dev:backend": "cd app/backend && pnpm dev",
    "dev:frontend": "cd app/frontend && pnpm dev",
    "---------------------------------------------------------------------------- Code Gen": "",
    "generate:watch": "./bin/generate-watch.sh",
    "generate": "cd app/backend && pnpm generate",
    "---------------------------------------------------------------------------- Lint": "",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "---------------------------------------------------------------------------- Test": "",
    "test:all": "jest --config jest.all.ts",
    "test": "jest",
    "test:lint": "jest --config jest.lint.ts",
    "test:cypress": "cypress open",
    "---------------------------------------------------------------------------- Start": "",
    "start": "pnpm build && cd app/backend && pnpm start"
  },
  "dependencies": {
    "@trpc/server": "11.0.0-rc.373",
    "dotenv": "^16.4.7",
    "http-status-codes": "^2.3.0",
    "pino": "^9.6.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.3.0",
    "ts-fsrs": "^3.5.7",
    "tslib": "^2.8.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.24",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.17.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-runner-eslint": "^2.2.1",
    "onchange": "^7.1.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
