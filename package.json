{
  "name": "hitting-the-fan",
  "version": "0.0.0",
  "author": "Bo Tembunkiart <botbunk@gmail.com>",
  "license": "MIT",
  "private": true,
  "description": "What do you do when shit hits the fan?",
  "scripts": {
    "---------------------------------------------------------------------------- Build": "",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "cd app/backend && pnpm build",
    "build:frontend": "cd app/frontend && pnpm build",
    "---------------------------------------------------------------------------- Setup": "",
    "postinstall": "pnpm install:backend && pnpm install:frontend",
    "install:backend": "cd app/backend && pnpm install",
    "install:frontend": "cd app/frontend && pnpm install",
    "---------------------------------------------------------------------------- Local Dev": "",
    "dev": "./bin/dev-watch.sh",
    "dev:backend": "cd app/backend && pnpm dev",
    "dev:frontend": "cd app/frontend && pnpm dev",
    "---------------------------------------------------------------------------- Lint": "",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "---------------------------------------------------------------------------- Test": "",
    "test:all": "jest --config jest.all.ts",
    "test": "jest",
    "test:lint": "jest --config jest.lint.ts",
    "---------------------------------------------------------------------------- Start": "",
    "start": "pnpm build && cd app/backend && pnpm start"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0",
    "pino": "^9.0.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "tslib": "^2.6.2",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-runner-eslint": "^2.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
